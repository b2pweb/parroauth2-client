{
    "name": "b2p/parroauth2-client",
    "description": "B2P OAuth 2 client implementation",
    "type": "library",
    "license": "proprietary",
    "repositories": [
        {
            "type": "composer",
            "url": "http://packagist.b2pweb.com"
        }
    ],

    "autoload": {
        "psr-4": {
            "Parroauth2\\Client\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Parroauth2\\Client\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.4",
        "b2p/kangaroo": "dev-master",
        "lcobucci/jwt": "^3.2"
    },
    "extra": {
        "branch-alias": {
            "dev-dev": "1.2.x-dev"
        }
    },
    "suggest": {
        "b2p/bdf-session": "Allows the use of the Bdf session storage"
    },

    "require-dev": {
        "b2p/bdf-phpunit": "~1.0",
        "b2p/bdf-session": "~1.0"
    }
}